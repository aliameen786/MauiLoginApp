<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLoginApp.MainPage"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Top Bar -->
            <Grid ColumnDefinitions="*,Auto" Padding="0,10">
                <Label Text="Dashboard"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#2C3E50"
                       VerticalOptions="Center" />

                <Button Text="Logout"
                        x:Name="LogoutBtn"
                        Clicked="OnLogoutClicked"
                        BackgroundColor="#E74C3C"
                        TextColor="White"
                        CornerRadius="6"
                        Padding="14,6"
                        FontAttributes="Bold"
                        HorizontalOptions="End" />
            </Grid>

            <!-- Centered Welcome Text -->
            <Label Text="Welcome to Your Dashboard"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#34495E"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0" />

            <!-- Dashboard Image -->
            <Image Source="dotnet_bot.png"
                   HeightRequest="150"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   Margin="0,10,0,10" />

            <!-- Professional Cards Section -->
            <VerticalStackLayout Spacing="15">

                <!-- Example Card -->
                <Frame BackgroundColor="White"
                       CornerRadius="12"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Quick Summary"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#2C3E50" />
                        <Label Text="Here you can manage your profile, settings, and other app features."
                               FontSize="14"
                               TextColor="#7F8C8D"
                               Margin="0,5,0,0" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Add More Cards Below As Needed -->

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLoginApp.RegisterPage"
             Title="RegisterPage" Padding="20" BackgroundColor="White">
    <VerticalStackLayout>
        <Image
     Source="register.jpg"
     Aspect="AspectFill"
     HeightRequest="200"
     WidthRequest="200"
     HorizontalOptions="Center"
     Margin="0,0,0,20"
     />

        <Label 
            Text="Create Account"
            VerticalOptions="Center" 
            HorizontalOptions="Center" TextColor="#333" FontAttributes="Bold" FontSize="28"/>

        <Label Text="Email" FontSize="14" TextColor="#333"></Label>
        <Border Stroke="#ddd" StrokeThickness="1" Background="white" StrokeShape="RoundRectangle 10" Padding="10">
            <Entry
            x:Name="EmailEntry"
            Placeholder="Enter your email"
            Keyboard="Email"
            FontSize="16"
            TextColor="#333"
            BackgroundColor="Transparent"
            PlaceholderColor="#aaa"
            />

        </Border>

        <Label Text="Password" FontSize="14" TextColor="#333"></Label>
        <Border Stroke="#ddd" StrokeThickness="1" Background="white" StrokeShape="RoundRectangle 10" Padding="10">
            <Entry
      x:Name="PasswordEntry"
      Placeholder="Enter your password"
      IsPassword="True"
      FontSize="16"
      TextColor="#333"
      BackgroundColor="Transparent"
      PlaceholderColor="#aaa"
      />

        </Border>

        <Label Text="Confirm Password" FontSize="14" TextColor="#333"></Label>
        <Border Stroke="#ddd" StrokeThickness="1" Background="white" StrokeShape="RoundRectangle 10" Padding="10">
            <Entry
x:Name="ConfirmPasswordEntry"
Placeholder="Confirm your password"
IsPassword="True"
FontSize="16"
TextColor="#333"
BackgroundColor="Transparent"
PlaceholderColor="#aaa"
/>

        </Border>


        <Button 
            Text="Register"
            BackgroundColor="#007AFF"
            TextColor="White"
            FontSize="18"
            CornerRadius="10"
            Clicked="OnRegisterButtonClicked"/>

        <Label Text="Already have an account? Login"
        HorizontalOptions="Center"
        TextColor="#4e8ef7"
        FontSize="14">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnLoginLabelTapped"/>
                <!--Tapped="OnRegisterLabelTapped"-->
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</ContentPage>